@model IEnumerable<MoneyTrakr.Framework.Transaction>

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
	<h2>Recent Manual Transactions</h2>
</div>
		<p>
			@Html.ActionLink("Create New", "Create")
            <br />
            @Html.ActionLink("Reset All", "Reset", null, new { onclick = "return confirm('Are you sure you wish to reset all? This can NOT be undone!!');" }) 
		</p>
		<table class="table table-striped">
			<thead>
				<tr>
					<th></th>
					<th>
						Description
					</th>
					<th>
						CreatedDate
					</th>
					<th>
						Amount
					</th>
				</tr>
			</thead>
			<tbody>

@foreach (var item in Model) {
				<tr>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
						@Html.ActionLink("Delete", "Delete", new { id=item.ID })
					</td>
					<td>
						@item.Description
					</td>
					<td>
						@String.Format("{0:g}", item.CreatedDate)
					</td>
					<td>
						@String.Format("{0:F}", item.Amount)
					</td>
			</tr>
}
		</tbody>
	</table>

